import machine
import time

# I2C address of the VL6180 sensor
VL6180_I2C_ADDR = 0x29

# Initialize I2C communication
i2c = machine.I2C(0, sda=machine.Pin(0), scl=machine.Pin(1))
sensor = VL6180X(i2c, VL6180_I2C_ADDR)

# Configure the sensor (optional)
sensor.set_timing(50, 200)  # Adjust the timing parameters as needed

try:
    while True:
        distance = sensor.read_range()
        print("Distance:", distance, "mm")
        time.sleep(1)

except KeyboardInterrupt:
    pass
